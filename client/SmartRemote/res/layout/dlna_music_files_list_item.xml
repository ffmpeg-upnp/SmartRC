<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical" >

		<ImageView
			android:id="@+id/music_file_item_iv_albumImage"
			android:layout_width="60dp"
			android:layout_height="55dp"
			android:layout_alignParentLeft="true"  
	        android:layout_alignParentTop="true" 
		/>

		<TextView 
			android:id="@+id/music_file_item_tv_title"
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_alignParentLeft="true"  
	        android:layout_alignParentTop="true" 
	        android:lines="2"
	        android:textSize="@dimen/dlna_item_title_text_size"
	        android:layout_marginLeft="65dp"
			android:textColor="@android:color/black"
		/>
		<TextView 
			android:id="@+id/music_file_item_tv_singer" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_marginLeft="65dp"
			android:layout_below="@id/music_file_item_tv_title"
			android:layout_alignParentBottom="true"
			android:textColor="@android:color/black"
		/>

		<TextView 
			android:id="@+id/music_file_item_tv_duration" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"   
        	android:layout_alignParentBottom="true"
        	android:textSize="@dimen/dlna_item_time_text_size"
        	android:layout_marginRight="40.0dp"
		    android:textColor="@android:color/black"
		/>
		<CheckBox
		    android:id="@+id/music_file_item_cb_checkbox" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"   
        	android:layout_alignParentBottom="true"
        	android:layout_marginRight="5.0dp"
        	style="@style/MyCheckBox"
		    />
</RelativeLayout>
