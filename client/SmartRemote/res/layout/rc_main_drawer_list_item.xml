<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp" 
    android:background="@drawable/main_menu_list_selector">

    <ImageView
        android:id="@+id/rc_main_drawer_list_item_iv_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/main_menu_item_rc"
        android:layout_centerVertical="true" />
    
    <TextView
        android:id="@+id/rc_main_drawer_list_item_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/rc_main_drawer_list_item_iv_icon"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:minHeight="60dp"
        android:paddingRight="40dp"
        android:textColor="@color/white"
        android:textSize="20sp" />
    
    <TextView android:id="@+id/rc_main_drawer_list_item_tv_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rc_vc_counter_bg"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:textColor="@color/white"/>

</RelativeLayout>