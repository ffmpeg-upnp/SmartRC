<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	android:id="@+id/rc_key_frequent_ll_layout"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" >
	
	<RelativeLayout
	    android:id="@+id/rc_key_frequent_rl_top"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp" >

	    <Button
	        android:id="@+id/rc_key_frequent_btn_mute"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/rc_key_frequent_btn_powerOff"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="20dp"
	        android:background="@drawable/rc_key_mute"
	        android:onClick="onButtonClicked"
	        android:tag="@string/TREQ_RC_KEY_Mute" />

	    <Button
	        android:id="@+id/rc_key_frequent_btn_powerOff"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginRight="20dp"
	        android:background="@drawable/rc_key_power"
	        android:onClick="onButtonClicked"
	        android:tag="@string/TREQ_RC_KEY_PowerOFF" />

	</RelativeLayout>
	
	<RelativeLayout
	    android:id="@+id/rc_key_frequent_rl_direction_area"
	    android:layout_width="fill_parent"
	    android:layout_height="277dp" >

	    <ImageView
		    android:id="@+id/rc_key_frequent_iv_bg"
		    android:layout_width="220dp"
		    android:layout_height="220dp"
		    android:src="@drawable/rc_key_direction_bg"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="true" />

		<Button
		    android:id="@+id/rc_key_frequent_btn_ok"
		    android:layout_width="80dp"
		    android:layout_height="80dp"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="true"
		    android:background="@drawable/rc_key_ok"
		    android:onClick="onButtonClicked"
		    android:tag="@string/TREQ_RC_KEY_OK"
		    android:textSize="20sp"
		    android:text="@string/ok"
		    android:textColor="@color/white"/>
		
		<Button android:id="@+id/rc_key_frequent_btn_left"
		    android:layout_width="80dp" 
		    android:layout_height="180dp" 
		    android:layout_toLeftOf="@+id/rc_key_frequent_btn_ok_invisible_set_location"
		    android:layout_centerVertical="true" 
		    android:background="@drawable/rc_key_left"
		    android:onClick="onButtonClicked" 
		    android:tag="@string/TREQ_RC_KEY_Left"  />

		<Button
		    android:id="@+id/rc_key_frequent_btn_right"
		    android:layout_width="80dp"
		    android:layout_height="180dp"
		    android:layout_toRightOf="@+id/rc_key_frequent_btn_ok_invisible_set_location"
		    android:layout_centerVertical="true" 
		    android:background="@drawable/rc_key_right"
		    android:onClick="onButtonClicked"
		    android:tag="@string/TREQ_RC_KEY_Right" />

		<Button
		    android:id="@+id/rc_key_frequent_btn_up"
		    android:layout_width="180dp"
		    android:layout_height="80dp"
		    android:layout_above="@+id/rc_key_frequent_btn_ok_invisible_set_location"
		    android:layout_centerHorizontal="true"
		    android:background="@drawable/rc_key_up"
		    android:onClick="onButtonClicked"
		    android:tag="@string/TREQ_RC_KEY_Up" />

		<Button
		    android:id="@+id/rc_key_frequent_btn_ok_invisible_set_location"
		    android:layout_width="60dp"
		    android:layout_height="60dp"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="true"
		    android:background="@color/white"
		    android:enabled="false"
		    android:visibility="invisible" />

		<Button
		    android:id="@+id/rc_key_frequent_btn_down"
		    android:layout_width="180dp"
		    android:layout_height="80dp"
			android:layout_centerHorizontal="true"
		    android:layout_below="@+id/rc_key_frequent_btn_ok_invisible_set_location"
		    android:background="@drawable/rc_key_down"
		    android:onClick="onButtonClicked"
		    android:tag="@string/TREQ_RC_KEY_Down" />

	</RelativeLayout>

	<RelativeLayout
	    android:id="@+id/rc_key_frequent_rl_bottom"
	    android:layout_width="fill_parent"
	    android:layout_height="70dp"
	    android:layout_marginBottom="20dp" >

	    <Button
	        android:id="@+id/rc_key_frequent_btn_home"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="20dp"
	        android:background="@drawable/rc_key_home"
	        android:onClick="onButtonClicked"
	        android:tag="@string/TREQ_RC_KEY_SmartTV"
	        android:textColor="@color/white" />

	    <Button
	        android:id="@+id/rc_key_frequent_btn_menu"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="20dp"
	        android:background="@drawable/rc_key_menu"
	        android:onClick="onButtonClicked"
	        android:tag="@string/TREQ_RC_KEY_Home"
	        android:textColor="@color/white" />

	    <Button
	        android:id="@+id/rc_key_frequent_btn_back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_centerHorizontal="true"
	        android:background="@drawable/rc_key_back"
	        android:onClick="onButtonClicked"
	        android:tag="@string/TREQ_RC_KEY_Back" />
	</RelativeLayout>

</LinearLayout>
